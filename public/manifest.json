{
	"manifest_version": 3,
	"name": "Hot Corner Shortcuts",
	"short_name": "HCS",
	"description": "A Chrome Extension Boilerplate for Preact with Manifest Version 3",
	"version": "1.0",
	"author": "Faisal Ahmed",
	"icons": {
		"128": "/icon.png"
	},
	"content_scripts": [
		{
			"js": ["assets/contentScript.js"],
			"matches": ["http://*/*", "https://*/*"]
		}
	],
	"action": {
		"default_title": "Browser Action",
		"default_popup": "src/action.html"
	},
	"permissions": ["storage"]
}
